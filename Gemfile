source "https://rubygems.org"

# Use GitHub Pages gem to manage Jekyll and other dependencies
gem "github-pages", group: :jekyll_plugins

# Other plugins
gem "liquid", "~> 4.0.3"
gem "wdm", "~> 0.1.0" if Gem.win_platform?

